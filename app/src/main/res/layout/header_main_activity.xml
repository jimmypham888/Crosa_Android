<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:id="@+id/search_listcontacts">
    </android.support.v7.widget.SearchView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dd8f2a"
        android:weightSum="3"
        android:id="@+id/ln_tab"
        android:gravity="center"
        android:padding="0dp"
        android:layout_below="@+id/search_listcontacts">
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/btn_contacts"
            android:text="CONTACT"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:background="@drawable/state_button_listcontacts"
            android:padding="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/state_button_listcontacts"
            android:id="@+id/btn_calendar"
            android:text="LỊCH HẸN GỌI LẠI"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/btn_status"
            android:textColor="@android:color/white"
            android:text="STATUS"
            android:textSize="12sp"
            android:background="@drawable/state_button_listcontacts"
            android:layout_weight="1"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_tab"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/listcontact_list"
        android:layout_below="@+id/ln_tab"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/tv_listcontacts_stt"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="STT"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/tv_listcontacts_calendar"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_listcontacts_stt"
            android:text="THÔNG TIN"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/tv_listcontacts_level"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_listcontacts_calendar"
            android:text="LEVEL"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="10sp"
            />

    </RelativeLayout>
</RelativeLayout>