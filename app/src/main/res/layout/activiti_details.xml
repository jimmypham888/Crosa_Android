<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_details_infor"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="190dp">
        <TextView
            android:id="@+id/tv_activiti_details_rank"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Thông Tin L1"
            />

        <TextView
            android:id="@+id/tv_activiti_details_name"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_activiti_details_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Họ và tên:"/>
        <EditText
            android:id="@+id/edt_activity_details_name"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:text="JonyNguyen"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@+id/tv_activiti_details_rank"
            android:background="@drawable/background_editext_details"
            android:layout_toRightOf="@+id/tv_activiti_details_name"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_activiti_details_email"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/edt_activity_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điện thoại:"/>
        <EditText
            android:id="@+id/edt_activity_details_email"
            android:layout_width="match_parent"
            android:layout_marginLeft="28dp"
            android:background="@drawable/background_editext_details"
            android:layout_below="@+id/tv_activiti_details_name"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:text="01675566677"
            android:textColor="@android:color/darker_gray"
            android:layout_toRightOf="@+id/tv_activiti_details_email"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_activiti_details_phone"
            android:layout_below="@+id/edt_activity_details_email"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"/>
        <EditText
            android:id="@+id/edt_activity_details_phone"
            android:layout_width="match_parent"
            android:background="@drawable/background_editext_details"
            android:text="duongdd2@topica.edu.vn"
            android:layout_marginLeft="58dp"
            android:textColor="@android:color/darker_gray"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_activiti_details_email"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/tv_activiti_details_phone"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="30dp"
            android:text="Cập nhật"
            android:layout_marginLeft="105dp"
            android:layout_marginRight="180dp"
            android:background="@drawable/background_btncapnhat"
            android:padding="0dp"
            android:layout_below="@+id/edt_activity_details_phone"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scv_details"
        android:layout_below="@+id/rl_details_infor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <include layout="@layout/item_infor_1_activity_details"/>
            <include layout="@layout/calendar_interview"/>
            <include layout="@layout/item_infor_test"/>
            <include layout="@layout/item_number_test"/>
            <include layout="@layout/item_number_interview"/>
            <include layout="@layout/item_process_sb"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>