<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.Main_All_Activity">

    <RelativeLayout
        android:id="@+id/rl_item_listcontacts"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ebebeb">
        <TextView
            android:id="@+id/tv_list_contacts_stt"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="01"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:textSize="17sp"
            />
        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_toRightOf="@+id/tv_list_contacts_stt">
        </View>
        <TextView
            android:id="@+id/tv_list_contacts_infor"
            android:layout_width="195dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view1"
            android:layout_marginLeft="5dp"
            android:text="Mr Jonheny"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            />
        <ImageView
            android:id="@+id/im_list_contacts_infor_email"
            android:layout_width="10dp"
            android:layout_marginTop="2dp"
            android:layout_height="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/view1"
            android:background="@drawable/email_item"
            android:layout_below="@id/tv_list_contacts_infor"
            />
        <TextView
            android:id="@+id/tv_list_contacts_infor_email"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/im_list_contacts_infor_email"
            android:layout_below="@id/tv_list_contacts_infor"
            android:text="01675566677"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"
            />
        <ImageView
            android:id="@+id/im_list_contacts_infor_phone"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/view1"
            android:background="@drawable/phone_item"
            android:layout_below="@+id/tv_list_contacts_infor_email"
            />
        <TextView
            android:id="@+id/tv_list_contacts_infor_phone"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/im_list_contacts_infor_phone"
            android:layout_below="@+id/tv_list_contacts_infor_email"
            android:text="duongdd2@gmail.com"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"
            />
        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_toRightOf="@+id/tv_list_contacts_infor">
        </View>
        <TextView
            android:id="@+id/tv_listcontacts_level"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/view2"
            android:text="L1"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:textSize="17sp"
            />
        <Button
            android:id="@+id/btn_show_slide_itemlist_contacts"
            android:layout_width="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/slide"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/rl_slide_show_listcontacts"
            android:layout_width="150dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:background="@drawable/slide_background"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_show_slide_itemlist_contacts_close"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_close_slide"
                android:layout_width="10dp"
                android:layout_height="25dp" />
            <Button
                android:layout_toRightOf="@+id/btn_show_slide_itemlist_contacts_close"
                android:id="@+id/btn_show_slide_itemlist_contacts_call"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_call"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <Button
                android:layout_toRightOf="@+id/btn_show_slide_itemlist_contacts_call"
                android:id="@+id/btn_note_item_listcontacts"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_note"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <Button
                android:layout_toRightOf="@+id/btn_note_item_listcontacts"
                android:id="@+id/btn_record_item_listcontacts"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_record"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>